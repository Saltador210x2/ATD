7.
db.kolekcja.remove({ $where: function() {
    return parseFloat(this.height) > 190
}})

8.
printjson(db.kolekcja.updateMany(
  { 'location.city': 'Moscow' },
  {
    $set: { 'location.city': 'Moskwa' }
  },
  { multi: true }
));

9.
printjson(db.kolekcja.update(
  { first_name: 'Antonio' },
  {
    $set: { hobby: 'pingpong' }
  },
  { multi: true }
));

10.
printjson(db.kolekcja.update(
  { job: 'Editor' },
  { $unset: { email: true } },
  { multi: true }
));
